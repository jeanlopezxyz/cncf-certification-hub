{
  "name": "cncf-certification-hub",
  "type": "module",
  "version": "1.0.0",
  "description": "CNCF Certification Resources Hub - A comprehensive platform for tracking CNCF certifications and study progress",
  "keywords": [
    "cncf",
    "kubernetes",
    "certification",
    "study-guide",
    "astro",
    "react",
    "typescript"
  ],
  "author": "CNCF Certification Hub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeanlopezxyz/cncf-certification-hub.git"
  },
  "homepage": "https://jeanlopezxyz.github.io/cncf-certification-hub",
  "bugs": {
    "url": "https://github.com/jeanlopezxyz/cncf-certification-hub/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "npm run sync-i18n && astro build && node scripts/optimize-build.cjs",
    "preview": "astro preview",
    "clean": "rm -rf dist .astro",
    "sync-i18n": "node scripts/sync-i18n-pages.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,astro}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,astro}\"",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests will be added soon\" && exit 0",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "prepare-pr": "npm run validate && npm run build",
    "test:ci-local": "./scripts/test-ci-local.sh",
    "test:lighthouse": "./scripts/test-lighthouse-local.sh",
    "analyze:bundle": "npm run build && node scripts/analyze-bundle.js",
    "test:security": "vitest run src/utils/security.test.ts",
    "analyze:vitals": "node -e \"const monitor = require('./dist/_assets/webVitals.js').webVitalsMonitor; console.log('Web Vitals:', monitor?.getAverages?.() || 'No data');\""
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.15.4",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "tailwindcss": "^3.4.0"
  }
}
