---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { EXTERNAL_URLS, TYPOGRAPHY } from '../config/app.config';
import { APP_CONFIG } from '../constants/index';
import LanguageSelector from '../components/language/LanguageSelector';
import Logo from '../components/Logo';
import SearchBar from '../components/search/SearchBar';
import Sidebar from '../components/sidebar/Sidebar';
import ThemeToggle from '../components/theme/ThemeToggle';

export interface Props {
  title: string;
  description?: string;
  showSidebar?: boolean;
  lang?: string;
}

const { title, description, showSidebar = false, lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const finalDescription = description || t('site.description');
const baseUrl = (import.meta.env.BASE_URL || '/').endsWith('/') 
  ? import.meta.env.BASE_URL 
  : import.meta.env.BASE_URL + '/';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={finalDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <meta name="theme-color" content="#1E50D9" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | CNCF Certification Resources Hub</title>
    
    <!-- Preconnect and preload hints for performance -->
    <link rel="preconnect" href={EXTERNAL_URLS.fonts.googleapis} />
    <link rel="preconnect" href={EXTERNAL_URLS.fonts.gstatic} crossorigin />
    <link rel="preload" href={EXTERNAL_URLS.fonts.googleFontsCss} as="style" />
    <link href={EXTERNAL_URLS.fonts.googleFontsCss} rel="stylesheet" />
    
    <!-- Preload critical JS -->
    <link rel="modulepreload" href="/src/components/theme/ThemeToggle.tsx" />
    <!-- ViewTransitions disabled to prevent flash -->
    
    <!-- Critical anti-flash CSS - INLINE AND COMPLETE -->
    <style>html{visibility:hidden;opacity:0;transition:none!important}:root{color-scheme:dark;--bg-primary:#fff;--bg-secondary:#f8fafc;--bg-tertiary:#f1f5f9;--text-primary:#111827;--text-secondary:#374151;--border:#e5e7eb}.dark{--bg-primary:#0a0b1e;--bg-secondary:#141328;--bg-tertiary:#1e1b3a;--text-primary:#f8fafc;--text-secondary:#e2e8f0;--border:#334155}body{background-color:var(--bg-primary)!important;color:var(--text-primary)!important;transition:none!important;font-family:'Plus Jakarta Sans',system-ui,-apple-system,sans-serif}html.visible{visibility:visible;opacity:1;transition:opacity .15s ease-in}html.dark:not(.visible),html.light:not(.visible){visibility:visible!important;opacity:1!important}</style>

  <!-- Load global.css asynchronously to prevent flash -->
    <link rel="preload" href="/src/styles/global.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href="/src/styles/global.css" /></noscript>

  <!-- Enhanced theme initialization with CSS load detection -->
    <script>
!function(){"use strict";let themeApplied=!1;function applyTheme(){if(themeApplied)return;themeApplied=!0;try{const t=localStorage.getItem("theme")||"",e=window.matchMedia("(prefers-color-scheme: dark)").matches,o=t==="dark"||!t&&e;document.documentElement.classList.remove("light","dark"),document.documentElement.classList.add(o?"dark":"light");const s=document.documentElement,r={"--bg-primary":o?"#0a0b1e":"#fff","--text-primary":o?"#f8fafc":"#111827","--bg-secondary":o?"#141328":"#f8fafc","--bg-tertiary":o?"#1e1b3a":"#f1f5f9","--border":o?"#334155":"#e5e7eb"};Object.entries(r).forEach((([t,e])=>{s.style.setProperty(t,e)}))}catch(t){console.error("Theme error:",t)}}
function showContent(){document.documentElement.classList.add("visible")}
function init(){applyTheme(),setTimeout(showContent,50)}
init(),document.addEventListener("DOMContentLoaded",showContent),window.addEventListener("load",showContent);
const cssLink=document.querySelector('link[href*="global.css"]');cssLink&&cssLink.addEventListener("load",showContent);
}();
</script>
  </head>
  <body class="min-h-screen transition-none" style="background-color: var(--bg-primary); color: var(--text-primary);">
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 bg-blue-600 text-white p-2 z-50 rounded-br-md focus:outline-none focus:ring-2 focus:ring-blue-400 font-medium"
      tabindex="1"
    >
      {t('accessibility.skipToMain')}
    </a>
    
    <nav
      class="fixed top-0 z-50 bg-gradient-to-r from-blue-600 to-blue-500 dark:from-dark-bg-tertiary dark:to-dark-bg-secondary shadow-lg transition-all duration-300 border-b border-blue-500/20 dark:border-dark-border-primary"
      style={showSidebar ? 'left: 16rem; right: 0;' : 'left: 0; right: 0;'}
    >
      <div class="w-full px-4 max-w-[1920px] mx-auto">
        <div class="flex items-center h-16 px-6">
          <!-- Left spacer -->
          <div class="w-32"></div>
          
          <!-- Centered search bar -->
          <div class="flex-1 flex justify-center">
            <div class="max-w-lg w-full">
              <SearchBar client:idle lang={lang} />
            </div>
          </div>
          
          <!-- Right actions - properly aligned -->
          <div class="w-32 flex items-center justify-end gap-2">
            <ThemeToggle client:only="react" />
            <LanguageSelector client:idle currentLang={lang} />
            <a
              href={EXTERNAL_URLS.github}
              target="_blank"
              class="flex items-center justify-center w-10 h-10 bg-white/10 dark:bg-gray-700 border border-white/20 dark:border-gray-600 rounded-lg hover:bg-white/20 dark:hover:bg-gray-600 hover:text-white transition-all duration-300 text-blue-100 dark:text-gray-200"
              aria-label="GitHub Repository"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </nav>
    
    <div class="pt-16 flex min-h-screen">
      {showSidebar && (
        <Sidebar client:visible lang={lang} transition:persist transition:name="sidebar" />
      )}
      
      <div
        class={`flex-1 flex flex-col min-h-screen relative ${showSidebar ? 'lg:ml-64' : ''}`}
        id="main-wrapper"
        data-sidebar={showSidebar}
      >
        <main class="flex-grow" id="main-content" role="main" aria-label={t('accessibility.mainContent')}>
          <slot />
        </main>
        
        <footer class="relative bg-gradient-to-br from-gray-100 via-blue-50 to-indigo-100 dark:from-dark-bg-secondary dark:via-dark-bg-tertiary dark:to-dark-bg-secondary border-t border-gray-200 dark:border-dark-border-primary mt-20 overflow-hidden" id="footer" style="background: var(--bg-tertiary); border-color: var(--border);">
          <div class="relative w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-8 sm:py-12">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 lg:gap-12 xl:gap-16 items-start justify-items-center sm:justify-items-start">
              <div class="sm:col-span-2 lg:col-span-2 min-w-0 text-center sm:text-left">
                <div class="mb-6">
                  <h3 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-sky-500 bg-clip-text text-transparent">
                    {t('footer.title')}
                  </h3>
                  <p class="text-blue-700 dark:text-gray-300 mb-4 max-w-md">
                    {t('footer.built')}
                  </p>
                  <p class="text-blue-600 dark:text-gray-400 text-sm max-w-lg">
                    {t('footer.disclaimer')}
                  </p>
                </div>
              </div>
              
              <div class="min-w-0">
                <h4 class="font-semibold mb-4 text-blue-800 dark:text-gray-200 flex items-center gap-2 justify-center sm:justify-start">
                  <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
                  </svg>
                  {t('footer.studyResources')}
                </h4>
              </div>
              
              <div class="min-w-0">
                <h4 class="font-semibold mb-4 text-blue-800 dark:text-gray-200 flex items-center gap-2 justify-center sm:justify-start">
                  <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
                  </svg>
                  {t('footer.community')}
                </h4>
              </div>
            </div>
            
            <div class="mt-10 pt-6 border-t border-gray-300 dark:border-gray-600">
              <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="text-center sm:text-left">
                  <p class="text-blue-700 dark:text-gray-300 text-sm">
                    {t('footer.journey')}
                  </p>
                </div>
                
                <div class="flex items-center gap-3">
                  <a
                    href={EXTERNAL_URLS.github}
                    target="_blank"
                    class="p-2 rounded-lg bg-blue-200 dark:bg-gray-700 hover:bg-blue-300 dark:hover:bg-gray-600 border border-blue-300 dark:border-gray-600 hover:border-blue-400 dark:hover:border-gray-500 transition-all"
                    aria-label={t('accessibility.githubRepository')}
                  >
                    <svg class="w-5 h-5 text-blue-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
    
    <script>
      // Final fallback to ensure content is visible
      setTimeout(() => {
        if (!document.documentElement.classList.contains('visible')) {
          document.documentElement.classList.add('visible');
        }
      }, 1000);
    </script>
  </body>
</html>