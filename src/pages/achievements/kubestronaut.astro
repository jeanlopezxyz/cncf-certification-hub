---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { certifications } from '../../data/certifications';
import { APP_CONFIG } from '../../constants';
import { TYPOGRAPHY } from '../../config/app.config';
import AchievementCertificationGrid from '../../components/achievements/AchievementCertificationGrid';
import AchievementHero from '../../components/achievements/AchievementHero.astro';
import AchievementSteps from '../../components/achievements/AchievementSteps.astro';
import AchievementCTA from '../../components/achievements/AchievementCTA.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = `${APP_CONFIG.basePath}${lang === 'en' ? '' : '/' + lang}`;

const kubestronautCerts = ['kcna', 'kcsa', 'cka', 'ckad', 'cks'];

const steps = [
  {
    number: 1,
    title: t('achievements.kubestronaut.step1Title'),
    description: t('achievements.kubestronaut.step1Desc')
  },
  {
    number: 2,
    title: t('achievements.kubestronaut.step2Title'),
    description: t('achievements.kubestronaut.step2Desc')
  },
  {
    number: 3,
    title: t('achievements.kubestronaut.step3Title'),
    description: t('achievements.kubestronaut.step3Desc')
  }
];
---

<Layout title={t('achievements.kubestronaut.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-6 sm:py-8">
    <!-- Hero Section - Refactored Component -->
    <AchievementHero
      title={t('achievements.kubestronaut.title')}
      description={t('achievements.kubestronaut.description')}
      iconSrc={`${APP_CONFIG.basePath}/kubestronaut-icon.svg`}
      certCount={5}
      certCountLabel={t('certifications.card.certifications')}
      certRequiredLabel={t('certifications.card.required')}
      gradientClass="bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-600 dark:from-[#242145] dark:via-[#1A1735] dark:to-[#130F25]"
      particleStyle="cosmic"
    />

    <!-- Certification Path -->
    <div class="mb-6 sm:mb-8">
      <h2
        class="text-xl sm:text-2xl font-bold mb-3 flex flex-col sm:flex-row items-center justify-center sm:justify-start gap-2 sm:gap-3 text-center sm:text-left"
      >
        <div
          class="w-8 h-8 bg-gradient-to-br from-sky-400 to-blue-600 rounded-lg flex items-center justify-center"
        >
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"
            ></path>
          </svg>
        </div>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 via-blue-400 to-blue-600">
          {t('achievements.kubestronaut.requiredCerts')}
        </span>
      </h2>

      <AchievementCertificationGrid
        certIds={kubestronautCerts}
        certifications={certifications}
        basePath={basePath}
        lang={lang}
        aria-label={t('achievements.kubestronaut.requiredCerts')}
        variant="kubestronaut"
        client:load
      />
    </div>

    <!-- Info Cards Grid -->
    <div class="grid md:grid-cols-2 xl:grid-cols-2 gap-2 sm:gap-3 mb-8">
      <!-- Requirements Card -->
      <div
        class="bg-gradient-to-br from-blue-900/40 to-blue-950/50 rounded-2xl p-6 border border-blue-700/50 shadow-lg shadow-blue-800/30"
      >
        <h3 class="text-lg sm:text-xl font-bold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 via-blue-400 to-blue-600">{t('achievements.kubestronaut.requirements')}</span>
        </h3>
        <ul class="space-y-3">
          <li class="flex items-start">
            <span class="text-blue-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.req1')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-blue-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.req2')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-blue-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.req3')}</span
            >
          </li>
        </ul>
      </div>

      <!-- Benefits Card -->
      <div
        class="bg-gradient-to-br from-sky-900/40 to-sky-950/50 rounded-2xl p-6 border border-sky-700/50 shadow-lg shadow-sky-800/30"
      >
        <h3 class="text-lg sm:text-xl font-bold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-sky-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
            ></path>
          </svg>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 via-blue-400 to-blue-600">{t('achievements.kubestronaut.benefits')}</span>
        </h3>
        <ul class="space-y-3">
          <li class="flex items-start">
            <span class="text-sky-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.benefit1')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-sky-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.benefit2')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-sky-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.benefit3')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-sky-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.benefit4')}</span
            >
          </li>
          <li class="flex items-start">
            <span class="text-sky-400 mr-2 leading-5 flex-shrink-0">•</span>
            <span class="text-gray-300 text-sm leading-5"
              >{t('achievements.kubestronaut.benefit5')}</span
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- How to Get Started - Refactored Component -->
    <AchievementSteps
      title={t('achievements.kubestronaut.how')}
      steps={steps}
    />

    <!-- Call to Action - Refactored Component -->
    <AchievementCTA
      text={t('achievements.kubestronaut.ctaText')}
      buttonText={t('achievements.kubestronaut.ctaButton')}
      href={`${basePath}/certifications/${kubestronautCerts[0]}`}
    />
  </div>
</Layout>
