---
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('sidebar.tips.path')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-6 sm:py-8">
    <!-- Hero Section -->
    <div
      class="relative bg-gradient-to-br from-green-700 via-green-600 to-emerald-600 rounded-3xl p-4 sm:p-6 lg:p-8 mb-6 sm:mb-8 text-white shadow-2xl overflow-hidden"
    >
      <!-- Background pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute inset-0"
          style={`background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');`}
        >
        </div>
      </div>

      <div class="relative text-center">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-white/30 to-green-400/30 backdrop-blur-sm rounded-2xl mb-4 shadow-lg"
        >
          <svg class="w-10 h-10 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M22 5.18L10.59 16.6l-4.24-4.24l1.41-1.41l2.83 2.83l10-10L22 5.18zM12 20c-4.41 0-8-3.59-8-8s3.59-8 8-8c1.57 0 3.04.46 4.28 1.25l1.45-1.45C16.1 2.67 14.13 2 12 2C6.48 2 2 6.48 2 12s4.48 10 10 10c1.73 0 3.36-.44 4.78-1.22l-1.5-1.5c-1 .46-2.11.72-3.28.72z"
            ></path>
          </svg>
        </div>
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-green-100 bg-clip-text text-transparent mb-4"
        >
          {t('sidebar.tips.path')}
        </h1>
        <p class="text-lg sm:text-xl text-white/90 max-w-3xl mx-auto">
          {t('tips.path.description')}
        </p>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="space-y-6">
      <!-- Week 1-2 Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center"
          >
            <span class="text-white font-bold">1</span>
          </div>
          {t('studyPath.week1.title')}
        </h2>
        <div class="space-y-4">
          <div class="bg-blue-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('studyPath.week1.focus')}</h3>
            <p class="text-gray-700">{t('studyPath.week1.description')}</p>
          </div>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="text-blue-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week1.item1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-blue-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week1.item2')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-blue-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week1.item3')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-blue-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week1.item4')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Week 3-4 Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center"
          >
            <span class="text-white font-bold">2</span>
          </div>
          {t('studyPath.week3.title')}
        </h2>
        <div class="space-y-4">
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('studyPath.week3.focus')}</h3>
            <p class="text-gray-700">{t('studyPath.week3.description')}</p>
          </div>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week3.item1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week3.item2')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week3.item3')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week3.item4')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Week 5-6 Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center"
          >
            <span class="text-white font-bold">3</span>
          </div>
          {t('studyPath.week5.title')}
        </h2>
        <div class="space-y-4">
          <div class="bg-purple-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('studyPath.week5.focus')}</h3>
            <p class="text-gray-700">{t('studyPath.week5.description')}</p>
          </div>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="text-purple-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week5.item1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-purple-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week5.item2')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-purple-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week5.item3')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-purple-500 mt-1">•</span>
              <span class="text-gray-700">{t('studyPath.week5.item4')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Key Tips Section -->
      <div
        class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-200"
      >
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
              ></path>
            </svg>
          </div>
          {t('tips.path.keyTips.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.path.keyTips.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.path.keyTips.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.path.keyTips.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.path.keyTips.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.path.keyTips.item5')}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
