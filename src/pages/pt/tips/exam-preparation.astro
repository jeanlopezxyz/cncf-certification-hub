---
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('sidebar.tips.exam')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-6 sm:py-8">
    <!-- Hero Section -->
    <div
      class="relative bg-gradient-to-br from-blue-700 via-blue-600 to-sky-600 rounded-3xl p-4 sm:p-6 lg:p-8 mb-6 sm:mb-8 text-white shadow-2xl overflow-hidden"
    >
      <!-- Background pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute inset-0"
          style={`background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');`}
        >
        </div>
      </div>

      <div class="relative text-center">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-white/30 to-blue-400/30 backdrop-blur-sm rounded-2xl mb-4 shadow-lg"
        >
          <svg class="w-10 h-10 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 14l9-5-9-5-9 5 9 5zm0 2.84l-6.62-3.71L4 14v5c0 .55.45 1 1 1h14c.55 0 1-.45 1-1v-5l-1.38-.87L12 16.84z"
            ></path>
          </svg>
        </div>
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent mb-4"
        >
          {t('sidebar.tips.exam')}
        </h1>
        <p class="text-lg sm:text-xl text-white/90 max-w-3xl mx-auto">
          {t('tips.exam.description')}
        </p>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="space-y-6">
      <!-- Before Exam Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"
              ></path>
            </svg>
          </div>
          {t('tips.exam.before.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.before.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.before.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.before.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.before.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.before.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- During Exam Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z"></path>
            </svg>
          </div>
          {t('tips.exam.during.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.during.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.during.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.during.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.during.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.during.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- Performance Exams Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
              ></path>
            </svg>
          </div>
          {t('tips.exam.performance.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.performance.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.performance.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.performance.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.performance.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.performance.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- General Tips Section -->
      <div class="bg-gradient-to-br from-blue-50 to-sky-50 rounded-2xl p-6 border border-blue-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
              ></path>
            </svg>
          </div>
          {t('tips.exam.general.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.general.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.general.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.general.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.general.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.exam.general.item5')}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
