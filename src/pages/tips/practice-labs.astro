---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('sidebar.tips.practiceLabs')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-6 sm:py-8">
    <!-- Hero Section -->
    <div
      class="relative bg-gradient-to-br from-purple-700 via-purple-600 to-pink-600 rounded-3xl p-4 sm:p-6 lg:p-8 mb-6 sm:mb-8 text-white shadow-2xl overflow-hidden"
    >
      <!-- Background pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute inset-0"
          style={`background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');`}
        >
        </div>
      </div>

      <div class="relative text-center">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-white/30 to-purple-400/30 backdrop-blur-sm rounded-2xl mb-4 shadow-lg"
        >
          <svg class="w-10 h-10 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M8 3v2H6v4c0 2.21 1.79 4 4 4s4-1.79 4-4V5h-2V3H8m0 2h4v4c0 1.1-.9 2-2 2s-2-.9-2-2V5m-5 7v6c0 2.21 1.79 4 4 4h2c2.21 0 4-1.79 4-4v-4h3c1.11 0 2-.89 2-2v-1h2v-2h-2V7h2V5h-2V4c0-1.11-.89-2-2-2h-4v2h4v1h-2v2h2v2h-2v2h-2v2h-3v4c0 1.1-.9 2-2 2H7c-1.1 0-2-.9-2-2v-6H3z"
            ></path>
          </svg>
        </div>
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-purple-100 bg-clip-text text-transparent mb-4"
        >
          {t('sidebar.tips.practiceLabs')}
        </h1>
        <p class="text-lg sm:text-xl text-white/90 max-w-3xl mx-auto">
          {t('tips.labs.description')}
        </p>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="space-y-6">
      <!-- Environment Setup Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20 18c1.1 0 1.99-.9 1.99-2L22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2H0v2h24v-2h-4zM4 6h16v10H4V6z"
              ></path>
            </svg>
          </div>
          {t('tips.labs.setup.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.setup.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.setup.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.setup.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.setup.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.setup.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- Practice Resources Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
              ></path>
            </svg>
          </div>
          {t('tips.labs.resources.title')}
        </h2>
        <div class="space-y-4">
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('tips.labs.resources.free')}</h3>
            <ul class="space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.freeItem1')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.freeItem2')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.freeItem3')}</span>
              </li>
            </ul>
          </div>
          <div class="bg-blue-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('tips.labs.resources.paid')}</h3>
            <ul class="space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-blue-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.paidItem1')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-blue-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.paidItem2')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-blue-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.labs.resources.paidItem3')}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Practice Exercises Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M10,19L12,15H13L11,19H10M15,10V11H8V10H15M17,14V15H8V14H17Z"
              ></path>
            </svg>
          </div>
          {t('tips.labs.exercises.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.exercises.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.exercises.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.exercises.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.exercises.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.exercises.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- Pro Tips Section -->
      <div
        class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-200"
      >
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
              ></path>
            </svg>
          </div>
          {t('tips.labs.proTips.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.proTips.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.proTips.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.proTips.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.proTips.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-orange-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.labs.proTips.item5')}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
