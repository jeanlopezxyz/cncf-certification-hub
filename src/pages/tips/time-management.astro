---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('sidebar.tips.timeManagement')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12 2xl:px-20 3xl:px-32 py-6 sm:py-8">
    <!-- Hero Section -->
    <div
      class="relative bg-gradient-to-br from-orange-700 via-orange-600 to-red-600 rounded-3xl p-4 sm:p-6 lg:p-8 mb-6 sm:mb-8 text-white shadow-2xl overflow-hidden"
    >
      <!-- Background pattern -->
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute inset-0"
          style={`background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');`}
        >
        </div>
      </div>

      <div class="relative text-center">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-white/30 to-orange-400/30 backdrop-blur-sm rounded-2xl mb-4 shadow-lg"
        >
          <svg class="w-10 h-10 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"
            ></path>
          </svg>
        </div>
        <h1
          class="text-3xl sm:text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-orange-100 bg-clip-text text-transparent mb-4"
        >
          {t('sidebar.tips.timeManagement')}
        </h1>
        <p class="text-lg sm:text-xl text-white/90 max-w-3xl mx-auto">
          {t('tips.time.description')}
        </p>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="space-y-6">
      <!-- Study Planning Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"
              ></path>
            </svg>
          </div>
          {t('tips.time.planning.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.planning.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.planning.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.planning.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.planning.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-blue-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.planning.item5')}</span>
          </li>
        </ul>
      </div>

      <!-- During Exam Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm4.2 14.2L11 13V7h1.5v5.2l4.5 2.7-.8 1.3z"
              ></path>
            </svg>
          </div>
          {t('tips.time.exam.title')}
        </h2>
        <div class="space-y-4">
          <div class="bg-green-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-2">{t('tips.time.exam.strategy')}</h3>
            <ul class="space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.time.exam.strategyItem1')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.time.exam.strategyItem2')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 mt-1">•</span>
                <span class="text-gray-700">{t('tips.time.exam.strategyItem3')}</span>
              </li>
            </ul>
          </div>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('tips.time.exam.item1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('tips.time.exam.item2')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-green-500 mt-1">•</span>
              <span class="text-gray-700">{t('tips.time.exam.item3')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Study Techniques Section -->
      <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M9 4v1.38c-.83-.33-1.72-.5-2.61-.5-1.79 0-3.58.68-4.95 2.05l3.33 3.33h1.11v1.11c.86.86 1.98 1.31 3.11 1.36V15H6v3c0 1.1.9 2 2 2h10c1.66 0 3-1.34 3-3V4H9zm-1.11 6.41V8.26H5.61L4.57 7.22a5.07 5.07 0 0 1 1.82-.34c1.34 0 2.59.52 3.54 1.46l1.41 1.41-.2.2a2.7 2.7 0 0 1-1.92.8c-.47 0-.93-.12-1.33-.34zM19 17c0 .55-.45 1-1 1s-1-.45-1-1v-2h-6v-2.59c.57-.23 1.1-.57 1.56-1.03l.2-.2L15.59 14H17v-1.41l-6-5.97V6h8v11z"
              ></path>
            </svg>
          </div>
          {t('tips.time.techniques.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <div>
              <strong class="text-gray-900">{t('tips.time.techniques.pomodoro')}</strong>
              <p class="text-gray-700 mt-1">{t('tips.time.techniques.pomodoroDesc')}</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <div>
              <strong class="text-gray-900">{t('tips.time.techniques.blocks')}</strong>
              <p class="text-gray-700 mt-1">{t('tips.time.techniques.blocksDesc')}</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <div>
              <strong class="text-gray-900">{t('tips.time.techniques.active')}</strong>
              <p class="text-gray-700 mt-1">{t('tips.time.techniques.activeDesc')}</p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-purple-500 mt-1">•</span>
            <div>
              <strong class="text-gray-900">{t('tips.time.techniques.spaced')}</strong>
              <p class="text-gray-700 mt-1">{t('tips.time.techniques.spacedDesc')}</p>
            </div>
          </li>
        </ul>
      </div>

      <!-- Key Tips Section -->
      <div
        class="bg-gradient-to-br from-orange-50 to-red-50 rounded-2xl p-6 border border-orange-200"
      >
        <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg flex items-center justify-center"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
              ></path>
            </svg>
          </div>
          {t('tips.time.keyTips.title')}
        </h2>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-yellow-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.keyTips.item1')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-yellow-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.keyTips.item2')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-yellow-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.keyTips.item3')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-yellow-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.keyTips.item4')}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-yellow-500 mt-1">•</span>
            <span class="text-gray-700">{t('tips.time.keyTips.item5')}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
